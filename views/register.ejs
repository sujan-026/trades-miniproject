<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/login.css">
    <title>Register</title>
</head>
<body>
    <section>
        <div class="container">
            <a href="#" class="logo">Global Trade</a>
            <div class="form-container">
                <div class="form-content">
                    <h1 class="form-title">Create an account</h1>
                    <form class="form" action="/register" method="POST">
                        <div class="form-group">
                            <label for="email" class="form-label">Your email</label>
                            <input type="email" name="email" id="email" class="form-input" placeholder="name@gmail.com" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-input" placeholder="••••••••" required>
                        </div>
                        <button type="submit" class="form-button">Sign up</button>
                        <p class="signup-text">Already have an account? <a href="/login" class="signup-link">Sign in</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
