<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DBA Webpage</title>
    <link rel="stylesheet" href="/styles/dba.css">
</head>

<body>
    <!-- Header -->
    <header>
        <span>Global Trades Platform</span>
        <div class="hamburger" id="hamburger" onclick="toggleMenu()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <nav id="navMenu">
            <a href="/index">Home</a>
            <a href="/trades">Trades</a>
            <a href="/dba">DBA</a>
            <a href="/#footer">About Us</a>
        </nav>
    </header>

    <div class="container">
        <h1>Global Trade Management Dashboard </h1>
        <!-- Form to add a new country -->
        <div class="form-container">
            <h2>Add Country</h2>
            <form id="addCountryForm" action="/add-country" method="POST">
                <input type="text" id="countryName" placeholder="Country Name" name="countryName" required>
                <input type="text" id="countryIsocode" placeholder="Country Iso Code" name="isoCode" required>
                <button type="submit">Add Country</button>
            </form>
        </div>
        
        <!-- Form to delete a country -->
        <div class="form-container">
            <h2>Delete Country</h2>
            <form id="deleteCountryForm" action="/delete-country" method="POST">
                <input type="text" id="countryId" placeholder="Country ID" name="countryId" required>
                <button type="submit">Delete Country</button>
            </form>
        </div>
        
        <!-- Table to display list of countries -->
        <div class="table-container">
            <h2>Country List</h2>
            <table id="countryTable">
                <thead>
                    <tr>
                        <th>Country Name</th>
                        <th>Flag</th>
                        <th>Iso Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="countryTableBody">
                    <!-- Countries will be dynamically added here -->
                </tbody>
            </table>
        </div>

        <!-- Form to add a new product -->
        <div class="form-container">
            <h2>Add Product</h2>
            <form id="addProductForm" action="/add-product" method="POST">
                <input type="text" id="productName" placeholder="Product Name" name="productName" required>
                <input type="text" id="productCategory" placeholder="Product Category" name="productCategory" required>
                <input type="text" id="countryId" placeholder="Country ID" name="countryId" required>
                <button type="submit">Add Product</button>
            </form>
        </div>

        <!-- Form to delete a product -->
        <div class="form-container">
            <h2>Delete Product</h2>
            <form id="deleteProductForm" action="/delete-product" method="POST">
                <input type="text" id="productId" placeholder="Product ID" name="productId" required>
                <button type="submit">Delete Product</button>
            </form>
        </div>
        
        <!-- Table to display list of products -->
        <div class="table-container">
            <h2>Product List</h2>
            <table id="productTable">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Product Category</th>
                        <th>Trade Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="productTableBody">
                    <!-- Products will be dynamically added here -->
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>